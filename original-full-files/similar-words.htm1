<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>INTUITY - Word Choice Quiz</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #0f172a 100%);
      min-height: 100vh;
      padding: 1rem;
      color: white;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    
    .top-nav {
      max-width: 56rem;
      margin: 0 auto 0.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 0.5rem;
    }
    
    .home-btn, .dataset-btn {
      color: #64748b;
      background: none;
      border: none;
      cursor: pointer;
      font-size: 0.8125rem;
      font-weight: 500;
      transition: color 0.2s;
      display: flex;
      align-items: center;
      gap: 0.25rem;
    }
    
    .home-btn:hover, .dataset-btn:hover { color: #94a3b8; }
    
    .dataset-selector { position: relative; }
    
    .dataset-dropdown {
      position: absolute;
      top: 100%;
      right: 0;
      margin-top: 0.5rem;
      background: rgba(30, 41, 59, 0.95);
      backdrop-filter: blur(24px);
      border: 1px solid rgba(71, 85, 105, 0.5);
      border-radius: 0.75rem;
      padding: 0.5rem;
      min-width: 200px;
      display: none;
      z-index: 1000;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
    }
    
    .dataset-dropdown.active { display: block; }
    
    .dataset-option {
      padding: 0.5rem 0.75rem;
      color: #cbd5e1;
      background: none;
      border: none;
      width: 100%;
      text-align: left;
      cursor: pointer;
      font-size: 0.8125rem;
      border-radius: 0.5rem;
      transition: all 0.2s;
      display: block;
    }
    
    .dataset-option:hover {
      background: rgba(71, 85, 105, 0.5);
      color: white;
    }
    
    .dataset-option.active {
      background: rgba(255, 107, 53, 0.2);
      color: rgba(255, 107, 53, 1);
      font-weight: 600;
    }
    
    .container { max-width: 56rem; margin: 0 auto; }
    .header { text-align: center; margin-bottom: 1rem; }
    .header h1 {
      font-size: 2.5rem;
      font-weight: 800;
      background: linear-gradient(135deg, rgba(255, 107, 53, 1) 0%, rgba(255, 160, 80, 0.9) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 0.25rem;
      letter-spacing: -0.03em;
    }
    .subtitle {
      font-size: 0.8125rem;
      color: #94a3b8;
      margin-bottom: 0.125rem;
    }
    .author {
      font-size: 0.6875rem;
      color: #64748b;
    }
    
    .test-nav {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      margin-bottom: 1rem;
    }
    .nav-arrow {
      width: 2rem;
      height: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #94a3b8;
      cursor: pointer;
      background: none;
      border: none;
      font-size: 1.25rem;
      transition: all 0.2s;
      border-radius: 0.5rem;
    }
    .nav-arrow:hover:not(:disabled) {
      color: white;
      background: rgba(71, 85, 105, 0.3);
    }
    .nav-arrow:disabled {
      opacity: 0.3;
      cursor: not-allowed;
      color: #475569;
    }
    .dots-container {
      display: flex;
      gap: 0.375rem;
      flex-wrap: wrap;
      justify-content: center;
      max-width: 28rem;
    }
    
    .dot-wrapper {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.125rem;
    }
    
    .trophy {
      width: 0.625rem;
      height: 0.625rem;
      opacity: 0;
      transition: opacity 0.3s;
      filter: drop-shadow(0 0 2px rgba(16, 185, 129, 0.6));
    }
    
    .trophy.visible { opacity: 1; }
    
    .test-dot {
      width: 0.625rem;
      height: 0.625rem;
      border-radius: 50%;
      background: #475569;
      cursor: pointer;
      transition: all 0.2s;
    }
    .test-dot:hover { transform: scale(1.2); }
    .test-dot.current {
      box-shadow: 0 0 0 2px rgba(251, 191, 36, 0.8);
    }
    .test-dot.score-perfect { 
      background: linear-gradient(135deg, #10b981, #059669);
      box-shadow: 0 0 8px rgba(16, 185, 129, 0.5);
    }
    .test-dot.score-high { 
      background: linear-gradient(135deg, #38bdf8, #0284c7);
      box-shadow: 0 0 8px rgba(56, 189, 248, 0.5);
    }
    .test-dot.score-medium { 
      background: linear-gradient(135deg, #facc15, #eab308);
      box-shadow: 0 0 8px rgba(250, 204, 21, 0.5);
    }
    .test-dot.score-low { 
      background: linear-gradient(135deg, #ef4444, #dc2626);
      box-shadow: 0 0 8px rgba(239, 68, 68, 0.5);
    }
    .test-info {
      text-align: center;
      color: #94a3b8;
      font-size: 0.8125rem;
      margin-bottom: 1rem;
    }
    .questions-container {
      background: rgba(30, 41, 59, 0.5);
      backdrop-filter: blur(24px);
      border-radius: 1.5rem;
      border: 1px solid rgba(71, 85, 105, 0.5);
      padding: 1.5rem;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.7);
      max-height: 60vh;
      overflow-y: auto;
      min-height: 300px;
    }
    .loading-state, .error-state {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      min-height: 250px;
    }
    .loading-state {
      color: #94a3b8;
    }
    .loading-icon {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }
    .error-state {
      color: #ef4444;
      max-width: 400px;
      margin: 0 auto;
    }
    .error-icon {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }
    .set-container {
      margin-bottom: 2.5rem;
    }
    .set-container:last-child {
      margin-bottom: 0;
    }
    .set-title {
      font-size: 0.75rem;
      font-weight: 600;
      color: rgba(255, 107, 53, 0.9);
      margin-bottom: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    .word-bank {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      margin-bottom: 1rem;
    }
    .word-chip {
      padding: 0.375rem 0.875rem;
      border-radius: 0.5rem;
      font-size: 0.8125rem;
      font-weight: 600;
      background: rgba(255, 107, 53, 0.15);
      color: rgba(255, 107, 53, 0.9);
      cursor: pointer;
      transition: all 0.15s;
      border: 2px solid transparent;
    }
    .word-chip:hover:not(.used):not(:disabled) {
      background: rgba(255, 107, 53, 0.25);
      transform: scale(1.05);
    }
    .word-chip.used {
      background: rgba(71, 85, 105, 0.3);
      color: #64748b;
      text-decoration: line-through;
      cursor: not-allowed;
    }
    .word-chip.selected {
      background: rgba(255, 107, 53, 0.3);
      color: rgba(255, 107, 53, 1);
      border-color: rgba(255, 107, 53, 0.8);
      box-shadow: 0 0 0 2px rgba(255, 107, 53, 0.2);
    }
    .sentences {
      display: flex;
      flex-direction: column;
      gap: 0.625rem;
    }
    .sentence-row {
      display: flex;
      align-items: flex-start;
      gap: 0.75rem;
    }
    .question-number {
      flex-shrink: 0;
      width: 1.5em;
      height: 1.5em;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.8125rem;
      font-weight: 600;
      background: linear-gradient(135deg, rgba(255, 107, 53, 1) 0%, rgba(255, 160, 80, 0.9) 100%);
      color: white;
    }
    .question-number.answered {
      background: linear-gradient(135deg, #10b981, #059669);
    }
    .sentence-text {
      flex: 1;
      padding-top: 0.125rem;
      color: #f1f5f9;
      line-height: 1.5;
      font-size: 0.8125rem;
    }
    .blank {
      display: inline-block;
      min-width: 80px;
      padding: 0.25rem 0.625rem;
      background: rgba(71, 85, 105, 0.4);
      border: 1px solid rgba(71, 85, 105, 0.5);
      border-radius: 0.375rem;
      margin: 0 0.25rem;
      color: #94a3b8;
      font-weight: 600;
      font-size: 0.8125rem;
      cursor: pointer;
      transition: all 0.2s;
    }
    .blank:hover {
      background: rgba(71, 85, 105, 0.6);
      border-color: rgba(148, 163, 184, 0.5);
    }
    .blank.filled {
      background: rgba(59, 130, 246, 0.2);
      border-color: rgba(59, 130, 246, 0.5);
      color: #60a5fa;
    }
    .blank.correct {
      background: rgba(16, 185, 129, 0.2) !important;
      color: #10b981 !important;
      font-weight: 600;
      border: 2px solid #10b981 !important;
    }
    .blank.incorrect {
      background: rgba(239, 68, 68, 0.2) !important;
      color: #ef4444 !important;
      font-weight: 600;
      border: 2px solid #ef4444 !important;
      text-decoration: line-through;
    }
    .footer {
      margin-top: 2rem;
      padding: 0.75rem 1rem;
      background: rgba(51, 65, 85, 0.2);
      backdrop-filter: blur(8px);
      border-radius: 0.75rem;
      display: flex;
      justify-content: center;
      gap: 2rem;
      font-size: 0.8125rem;
      flex-wrap: wrap;
    }
    .footer button {
      color: #94a3b8;
      background: none;
      border: none;
      cursor: pointer;
      transition: color 0.2s;
      font-weight: 500;
    }
    .footer button:hover:not(:disabled) {
      color: #e2e8f0;
    }
    .footer button:disabled {
      color: #475569;
      cursor: not-allowed;
      opacity: 0.5;
    }
    .footer button#scoreBtn {
      background: linear-gradient(135deg, rgba(255, 107, 53, 1) 0%, rgba(255, 160, 80, 0.9) 100%);
      color: white;
      padding: 0.5rem 1.5rem;
      border-radius: 0.5rem;
      font-weight: 600;
      box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3);
    }
    .footer button#scoreBtn:hover {
      transform: scale(1.05);
      box-shadow: 0 6px 16px rgba(255, 107, 53, 0.4);
    }
    .modal-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(8px);
      z-index: 1000;
      align-items: center;
      justify-content: center;
      padding: 1rem;
    }
    .modal-overlay.active {
      display: flex;
    }
    .modal {
      background: rgba(30, 41, 59, 0.95);
      backdrop-filter: blur(24px);
      border: 1px solid rgba(71, 85, 105, 0.5);
      border-radius: 1.5rem;
      padding: 2rem;
      max-width: 400px;
      width: 100%;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.9);
    }
    .modal-header {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .modal-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: #f1f5f9;
      margin-bottom: 0.5rem;
    }
    .modal-subtitle {
      font-size: 0.875rem;
      color: #94a3b8;
    }
    .score-display {
      text-align: center;
      padding: 1.5rem;
      background: rgba(51, 65, 85, 0.5);
      border-radius: 1rem;
      margin-bottom: 1rem;
    }
    .score-number {
      font-size: 3rem;
      font-weight: 800;
      background: linear-gradient(135deg, rgba(255, 107, 53, 1) 0%, rgba(255, 160, 80, 0.9) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 0.5rem;
    }
    .score-label {
      font-size: 0.875rem;
      color: #94a3b8;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    .stats-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 0.75rem;
    }
    .stat-item {
      background: rgba(51, 65, 85, 0.3);
      padding: 1rem;
      border-radius: 0.75rem;
      text-align: center;
    }
    .stat-value {
      font-size: 1.25rem;
      font-weight: 700;
      color: #f1f5f9;
      margin-bottom: 0.25rem;
    }
    .stat-label {
      font-size: 0.75rem;
      color: #94a3b8;
    }
    .modal-footer {
      display: flex;
      gap: 0.75rem;
    }
    .modal-btn {
      flex: 1;
      padding: 0.75rem;
      border: none;
      border-radius: 0.75rem;
      font-size: 0.875rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }
    .modal-btn-secondary {
      background: rgba(71, 85, 105, 0.5);
      color: #cbd5e1;
    }
    .modal-btn-secondary:hover {
      background: rgba(71, 85, 105, 0.7);
      transform: scale(1.05);
    }
    .modal-btn-primary {
      background: linear-gradient(135deg, rgba(255, 107, 53, 1) 0%, rgba(255, 160, 80, 0.9) 100%);
      color: white;
    }
    .modal-btn-primary:hover {
      transform: scale(1.05);
    }
  </style>
</head>
<body>
  <div class="top-nav">
    <button class="home-btn" onclick="goHome()">← Home</button>
    <div class="dataset-selector">
      <button class="dataset-btn" onclick="toggleDatasetMenu()">📂 Datasets ▼</button>
      <div class="dataset-dropdown" id="datasetDropdown"></div>
    </div>
  </div>

  <div class="container">
    <div class="header">
      <h1>INTUITY</h1>
      <p class="subtitle">Word Choice Quiz · B2 Level</p>
      <p class="author">by Majid Nashtai</p>
    </div>

    <div class="test-nav">
      <button class="nav-arrow" id="prevBtn" onclick="navigateTest(-1)">←</button>
      <div class="dots-container" id="dotsContainer"></div>
      <button class="nav-arrow" id="nextBtn" onclick="navigateTest(1)">→</button>
    </div>

    <div class="test-info" id="testInfo">Loading...</div>

    <div class="questions-container" id="questionsContainer">
      <div class="loading-state">
        <div class="loading-icon">⏳</div>
        <div>Loading quiz data...</div>
      </div>
    </div>

    <div class="footer">
      <button id="showAnswersBtn" onclick="showAnswers()">Show Answers</button>
      <button id="scoreBtn" onclick="showScore()">Score</button>
      <button id="resetBtn" onclick="resetTest()">Repeat Test</button>
    </div>
  </div>

  <div class="modal-overlay" id="scoreModal">
    <div class="modal">
      <div class="modal-header">
        <div class="modal-title">Test Results</div>
        <div class="modal-subtitle" id="modalSubtitle">Test 1 of 23</div>
      </div>
      <div class="score-display">
        <div class="score-number" id="scoreNumber">0/0</div>
        <div class="score-label">First Attempt Score</div>
      </div>
      <div class="stats-grid">
        <div class="stat-item">
          <div class="stat-value" id="answeredStat">0/0</div>
          <div class="stat-label">Answered</div>
        </div>
        <div class="stat-item">
          <div class="stat-value" id="testsDoneStat">0/23</div>
          <div class="stat-label">Tests Done</div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="modal-btn modal-btn-secondary" onclick="closeModal()">Close</button>
        <button class="modal-btn modal-btn-primary" onclick="closeModal(); showAnswers();">Show Answers</button>
      </div>
    </div>
  </div>

  <script>
    const DATASETS = [
      { name: 'Similar Words (115 sets)', path: '../../datacentre/datasm-01.json' }
    ];

    let quizData = null;
    let currentDatasetIndex = 0;
    let currentTestIndex = 0;
    let userAnswers = {};
    let selectedWord = null;
    let showAnswersMode = false;
    let firstAttemptScores = {};
    let SETS_PER_TEST = 5;
    let storageKey = '';

    function getStorageKey() {
      return 'quiz_vocab_' + DATASETS[currentDatasetIndex].path.split('/').pop().replace('.json', '');
    }

    function init() {
      createDatasetMenu();
      loadProgress();
      loadQuizData();
    }

    function createDatasetMenu() {
      const dropdown = document.getElementById('datasetDropdown');
      dropdown.innerHTML = '';
      
      DATASETS.forEach((dataset, index) => {
        const btn = document.createElement('button');
        btn.className = 'dataset-option' + (index === currentDatasetIndex ? ' active' : '');
        btn.textContent = dataset.name;
        btn.onclick = () => switchDataset(index);
        dropdown.appendChild(btn);
      });
    }

    function toggleDatasetMenu() {
      document.getElementById('datasetDropdown').classList.toggle('active');
    }

    document.addEventListener('click', (e) => {
      const selector = document.querySelector('.dataset-selector');
      if (selector && !selector.contains(e.target)) {
        document.getElementById('datasetDropdown').classList.remove('active');
      }
    });

    async function switchDataset(index) {
      if (index === currentDatasetIndex) return;
      
      currentDatasetIndex = index;
      currentTestIndex = 0;
      userAnswers = {};
      selectedWord = null;
      showAnswersMode = false;
      
      toggleDatasetMenu();
      createDatasetMenu();
      loadProgress();
      loadQuizData();
    }

    function loadProgress() {
      storageKey = getStorageKey();
      try {
        const saved = localStorage.getItem(storageKey);
        firstAttemptScores = saved ? JSON.parse(saved).firstAttemptScores || {} : {};
      } catch (e) {
        firstAttemptScores = {};
      }
    }

    function saveProgress() {
      try {
        localStorage.setItem(storageKey, JSON.stringify({ firstAttemptScores }));
      } catch (e) {
        console.error('Save failed');
      }
    }

    function getTestKey() {
      return 'test' + (currentTestIndex + 1);
    }

    function isTestLocked() {
      return firstAttemptScores[getTestKey()] !== undefined;
    }

    async function loadQuizData() {
      try {
        const res = await fetch(DATASETS[currentDatasetIndex].path);
        if (!res.ok) throw new Error('HTTP ' + res.status);
        const data = await res.json();
        
        if (!data.sets) throw new Error('Invalid JSON format');
        
        quizData = data;
        SETS_PER_TEST = data.setsPerTest || 5;
        
        createDots();
        updateNavButtons();
        renderTest();
        
      } catch (error) {
        console.error('Error loading:', error);
        showError(error);
      }
    }

    function showError(error) {
      const container = document.getElementById('questionsContainer');
      container.innerHTML = `
        <div class="error-state">
          <div class="error-icon">⚠️</div>
          <div style="font-weight: 600; margin-bottom: 0.5rem;">Unable to load quiz</div>
          <div style="font-size: 0.875rem; color: #94a3b8;">Error: ${error.message}</div>
        </div>
      `;
    }

    function createDots() {
      if (!quizData) return;
      
      const container = document.getElementById('dotsContainer');
      container.innerHTML = '';
      
      const totalTests = Math.ceil(quizData.sets.length / SETS_PER_TEST);
      
      for (let i = 0; i < totalTests; i++) {
        const wrapper = document.createElement('div');
        wrapper.className = 'dot-wrapper';
        
        const score = firstAttemptScores['test' + (i + 1)];
        
        if (score && score.percentage === 100) {
          const svg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
          svg.setAttribute('viewBox', '0 0 24 24');
          svg.setAttribute('fill', 'none');
          svg.setAttribute('class', 'trophy visible');
          svg.innerHTML = '<path d="M5.166 2.621v.858c-1.035.148-2.059.33-3.071.543a.75.75 0 0 0-.584.859 6.753 6.753 0 0 0 6.138 5.6 6.73 6.73 0 0 0 2.743 1.346A6.707 6.707 0 0 1 9.279 15H8.54c-1.036 0-1.875.84-1.875 1.875V19.5h-.75a2.25 2.25 0 0 0-2.25 2.25c0 .414.336.75.75.75h15a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-2.25-2.25h-.75v-2.625c0-1.036-.84-1.875-1.875-1.875h-.739a6.706 6.706 0 0 1-1.112-3.173 6.73 6.73 0 0 0 2.743-1.347 6.753 6.753 0 0 0 6.139-5.6.75.75 0 0 0-.585-.858 47.077 47.077 0 0 0-3.07-.543V2.62a.75.75 0 0 0-.658-.744 49.22 49.22 0 0 0-6.093-.377c-2.063 0-4.096.128-6.093.377a.75.75 0 0 0-.657.744Z" fill="#10b981"/>';
          wrapper.appendChild(svg);
        }
        
        const dot = document.createElement('div');
        dot.className = 'test-dot';
        if (i === currentTestIndex) dot.classList.add('current');
        
        if (score) {
          if (score.percentage === 100) dot.classList.add('score-perfect');
          else if (score.percentage >= 80) dot.classList.add('score-high');
          else if (score.percentage >= 60) dot.classList.add('score-medium');
          else dot.classList.add('score-low');
        }
        
        dot.onclick = () => goToTest(i);
        wrapper.appendChild(dot);
        container.appendChild(wrapper);
      }
    }

    function navigateTest(direction) {
      if (!quizData) return;
      const totalTests = Math.ceil(quizData.sets.length / SETS_PER_TEST);
      const newIndex = currentTestIndex + direction;
      if (newIndex >= 0 && newIndex < totalTests) {
        goToTest(newIndex);
      }
    }

    function goToTest(index) {
      currentTestIndex = index;
      showAnswersMode = false;
      selectedWord = null;
      userAnswers = {};
      createDots();
      updateNavButtons();
      renderTest();
    }

    function updateNavButtons() {
      if (!quizData) return;
      const totalTests = Math.ceil(quizData.sets.length / SETS_PER_TEST);
      document.getElementById('prevBtn').disabled = currentTestIndex === 0;
      document.getElementById('nextBtn').disabled = currentTestIndex === totalTests - 1;
    }

    function renderTest() {
      if (!quizData) return;

      const startSet = currentTestIndex * SETS_PER_TEST;
      const endSet = Math.min(startSet + SETS_PER_TEST, quizData.sets.length);
      const container = document.getElementById('questionsContainer');
      
      let html = '';
      
      for (let setIdx = startSet; setIdx < endSet; setIdx++) {
        const set = quizData.sets[setIdx];
        const isLastSet = setIdx === endSet - 1;
        
        html += `<div class="set-container"${isLastSet ? ' style="margin-bottom:0"' : ''}>`;
        html += `<div class="set-title">Set ${set.setNumber}</div>`;
        
        // Word bank
        html += '<div class="word-bank">';
        set.words.forEach((word, wordIdx) => {
          let isUsed = false;
          set.sentences.forEach((_, sentIdx) => {
            if (userAnswers[`${setIdx}-${sentIdx}`] === wordIdx) {
              isUsed = true;
            }
          });
          
          const isSelected = selectedWord && selectedWord.setIdx === setIdx && selectedWord.wordIdx === wordIdx;
          let classes = 'word-chip';
          if (isUsed && !showAnswersMode) classes += ' used';
          if (isSelected) classes += ' selected';
          
          html += `<button class="${classes}" onclick="handleWordClick(${setIdx}, ${wordIdx})" ${isUsed && !showAnswersMode ? 'disabled' : ''}>${word}</button>`;
        });
        html += '</div>';
        
        // Sentences
        html += '<div class="sentences">';
        set.sentences.forEach((sentence, sentIdx) => {
          const key = `${setIdx}-${sentIdx}`;
          const answer = userAnswers[key];
          const parts = sentence.text.split('_____');
          const isCorrect = answer === sentence.correct;
          
          let blankClass = 'blank';
          let blankText = '_____';
          
          if (showAnswersMode) {
            const correctWord = set.words[sentence.correct];
            if (answer !== undefined) {
              const userWord = set.words[answer];
              if (isCorrect) {
                blankClass += ' correct';
                blankText = userWord;
              } else {
                blankText = `<span class="blank incorrect">${userWord}</span> <span class="blank correct">${correctWord}</span>`;
              }
            } else {
              blankClass += ' correct';
              blankText = correctWord;
            }
          } else if (answer !== undefined) {
            blankText = set.words[answer];
            blankClass += ' filled';
          }
          
          const numClass = answer !== undefined ? 'question-number answered' : 'question-number';
          
          html += `<div class="sentence-row"><div class="${numClass}">${sentIdx + 1}</div><div class="sentence-text">${parts[0]}<span class="${blankClass}" onclick="handleBlankClick(${setIdx}, ${sentIdx})">${blankText}</span>${parts[1] || ''}</div></div>`;
        });
        html += '</div></div>';
      }
      
      container.innerHTML = html;
      updateTestInfo();
    }

    function updateTestInfo() {
      if (!quizData) return;
      
      const startSet = currentTestIndex * SETS_PER_TEST;
      const endSet = Math.min(startSet + SETS_PER_TEST, quizData.sets.length);
      const totalTests = Math.ceil(quizData.sets.length / SETS_PER_TEST);
      
      let answered = 0;
      let total = 0;
      
      for (let setIdx = startSet; setIdx < endSet; setIdx++) {
        const set = quizData.sets[setIdx];
        set.sentences.forEach((_, sentIdx) => {
          total++;
          if (userAnswers[`${setIdx}-${sentIdx}`] !== undefined) answered++;
        });
      }
      
      document.getElementById('testInfo').textContent = 
        `Test ${currentTestIndex + 1} of ${totalTests} • ${answered}/${total} answered`;
    }

    function handleWordClick(setIdx, wordIdx) {
      if (!quizData || showAnswersMode || isTestLocked()) return;
      
      const set = quizData.sets[setIdx];
      let isUsed = false;
      set.sentences.forEach((_, sentIdx) => {
        if (userAnswers[`${setIdx}-${sentIdx}`] === wordIdx) {
          isUsed = true;
        }
      });
      
      if (isUsed) return;
      
      selectedWord = { setIdx, wordIdx };
      renderTest();
    }

    function handleBlankClick(setIdx, sentIdx) {
      if (!quizData || showAnswersMode || isTestLocked()) return;
      
      const key = `${setIdx}-${sentIdx}`;
      
      if (userAnswers[key] !== undefined) {
        const wordIdx = userAnswers[key];
        delete userAnswers[key];
        selectedWord = { setIdx, wordIdx };
        renderTest();
        return;
      }
      
      if (selectedWord && selectedWord.setIdx === setIdx) {
        userAnswers[key] = selectedWord.wordIdx;
        selectedWord = null;
        renderTest();
      }
    }

    function calculateScore() {
      if (!quizData) return { correct: 0, total: 0 };
      
      const startSet = currentTestIndex * SETS_PER_TEST;
      const endSet = Math.min(startSet + SETS_PER_TEST, quizData.sets.length);
      
      let correct = 0;
      let total = 0;
      
      for (let setIdx = startSet; setIdx < endSet; setIdx++) {
        const set = quizData.sets[setIdx];
        set.sentences.forEach((sentence, sentIdx) => {
          const key = `${setIdx}-${sentIdx}`;
          if (userAnswers[key] !== undefined) {
            total++;
            if (userAnswers[key] === sentence.correct) correct++;
          }
        });
      }
      
      return { correct, total };
    }

    function showAnswers() {
      if (!quizData) return;
      if (isTestLocked()) {
        alert('This test is locked. Showing correct answers.');
      }
      showAnswersMode = true;
      renderTest();
    }

    function showScore() {
      if (!quizData) return;
      
      const score = calculateScore();
      
      if (score.total === 0) {
        alert('Please answer all questions first.');
        return;
      }
      
      const percentage = Math.round((score.correct / score.total) * 100);
      
      if (!isTestLocked()) {
        firstAttemptScores[getTestKey()] = {
          correct: score.correct,
          total: score.total,
          percentage,
          timestamp: new Date().toISOString()
        };
        saveProgress();
        createDots();
      }
      
      const totalTests = Math.ceil(quizData.sets.length / SETS_PER_TEST);
      const completedCount = Object.keys(firstAttemptScores).length;
      
      document.getElementById('modalSubtitle').textContent = 
        `Test ${currentTestIndex + 1} of ${totalTests}`;
      document.getElementById('scoreNumber').textContent = 
        `${score.correct}/${score.total}`;
      document.getElementById('answeredStat').textContent = 
        `${score.total}/${score.total}`;
      document.getElementById('testsDoneStat').textContent = 
        `${completedCount}/${totalTests}`;
      
      document.getElementById('scoreModal').classList.add('active');
    }

    function closeModal() {
      document.getElementById('scoreModal').classList.remove('active');
    }

    function resetTest() {
      if (!quizData) return;
      
      if (isTestLocked()) {
        alert('❌ This test is locked! You already submitted it.\n\nChoose another test to practice.');
        return;
      }
      
      if (Object.keys(userAnswers).length === 0) return;
      
      if (confirm('Clear all answers?')) {
        userAnswers = {};
        showAnswersMode = false;
        selectedWord = null;
        renderTest();
      }
    }

    function goHome() {
      window.location.href = '../../index.html';
    }

    document.getElementById('scoreModal').addEventListener('click', function(e) {
      if (e.target === this) closeModal();
    });

    window.onload = init;
  </script>
</body>
</html>
