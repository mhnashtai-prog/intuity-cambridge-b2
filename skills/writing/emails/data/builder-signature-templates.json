    "student": {
      "closing": "Best regards",
      "structure": [
        "{name}",
        "{title}",
        "{school}",
        "{email}"
      ],
      "example": {
        "name": "Sarah Johnson",
        "title": "Year 11 Student",
        "school": "Cambridge B2 Candidate",
        "email": "sarah.johnson@email.com"
      },
      "guidelines": [
        "Keep it simple and professional",
        "Include your year/grade if relevant",
        "Mention exam preparation if applicable",
        "Don't include quotes or emojis"
      ]
    },
    "professional": {
      "closing": "Sincerely",
