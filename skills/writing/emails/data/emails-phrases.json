{
  "meta": {
    "version": "1.0",
    "language": "en",
    "type": "emails-phrases",
    "structure": "formality -> stage -> groups -> phrases"
  },
  "phrases": {
    "formal": {
      "opening": {
        "greetings": [
          { "id": "f-open-greet-1", "text": "Dear [Title] [Surname],", "tags": ["greeting"] },
          { "id": "f-open-greet-2", "text": "Dear Sir or Madam,", "tags": ["greeting", "unknown-recipient"] },
          { "id": "f-open-greet-3", "text": "To whom it may concern,", "tags": ["greeting", "unknown-recipient"] }
        ],
        "openers": [
          { "id": "f-open-1", "text": "I hope this email finds you well.", "tags": ["polite"] },
          { "id": "f-open-2", "text": "I am writing to you regarding [topic].", "tags": ["purpose-lead"], "slots": ["topic"] },
          { "id": "f-open-3", "text": "Thank you for your email dated [date].", "tags": ["reply", "reference"], "slots": ["date"] },
          { "id": "f-open-4", "text": "Further to our conversation on [date], I would like to...", "tags": ["follow-up"], "slots": ["date"] }
        ],
        "introductions": [
          { "id": "f-open-intro-1", "text": "My name is [name], and I am a [role] at [organisation].", "tags": ["intro"], "slots": ["name", "role", "organisation"] },
          { "id": "f-open-intro-2", "text": "I am contacting you on behalf of [organisation].", "tags": ["intro", "representing"], "slots": ["organisation"] }
        ]
      },
      "purpose": {
        "requests": [
          { "id": "f-purp-req-1", "text": "Could you please provide more information about [topic]?", "tags": ["request"], "slots": ["topic"] },
          { "id": "f-purp-req-2", "text": "Would it be possible to [action]?", "tags": ["request"], "slots": ["action"] },
          { "id": "f-purp-req-3", "text": "I would appreciate it if you could [action] at your earliest convenience.", "tags": ["request", "polite"], "slots": ["action"] }
        ],
        "applications": [
          { "id": "f-purp-app-1", "text": "I am writing to apply for the position of [position].", "tags": ["application"], "slots": ["position"] },
          { "id": "f-purp-app-2", "text": "Please find my CV attached for your consideration.", "tags": ["application", "attachment"] }
        ],
        "followups": [
          { "id": "f-purp-follow-1", "text": "I am writing to follow up on my previous email regarding [topic].", "tags": ["follow-up"], "slots": ["topic"] },
          { "id": "f-purp-follow-2", "text": "I would appreciate an update when you have a moment.", "tags": ["follow-up", "polite"] }
        ],
        "complaints": [
          { "id": "f-purp-comp-1", "text": "I am writing to express my dissatisfaction with [issue].", "tags": ["complaint"], "slots": ["issue"] },
          { "id": "f-purp-comp-2", "text": "I would like to bring the following matter to your attention.", "tags": ["complaint", "formal"] }
        ],
        "apologies": [
          { "id": "f-purp-apol-1", "text": "Please accept my apologies for the delay in responding.", "tags": ["apology", "delay"] },
          { "id": "f-purp-apol-2", "text": "I apologise for any inconvenience caused.", "tags": ["apology"] }
        ]
      },
      "details": {
        "providing_information": [
          { "id": "f-det-info-1", "text": "Please find the requested details below:", "tags": ["info"] },
          { "id": "f-det-info-2", "text": "With regard to [topic], I can confirm that...", "tags": ["confirm"], "slots": ["topic"] },
          { "id": "f-det-info-3", "text": "For your reference, I have included [document/item].", "tags": ["reference"], "slots": ["document/item"] }
        ],
        "clarifying": [
          { "id": "f-det-clar-1", "text": "Could you please clarify what you mean by [point]?", "tags": ["clarify"], "slots": ["point"] },
          { "id": "f-det-clar-2", "text": "Just to confirm, you are requesting [detail], correct?", "tags": ["confirm"], "slots": ["detail"] }
        ],
        "scheduling": [
          { "id": "f-det-sch-1", "text": "I am available on [day/time] and [day/time].", "tags": ["schedule"], "slots": ["day/time", "day/time"] },
          { "id": "f-det-sch-2", "text": "Would [day/time] be convenient for you?", "tags": ["schedule"], "slots": ["day/time"] },
          { "id": "f-det-sch-3", "text": "Please let me know which time suits you best.", "tags": ["schedule"] }
        ],
        "requesting_action": [
          { "id": "f-det-act-1", "text": "Could you please [action] by [deadline]?", "tags": ["request", "deadline"], "slots": ["action", "deadline"] },
          { "id": "f-det-act-2", "text": "If possible, I would appreciate a response by [deadline].", "tags": ["request", "deadline"], "slots": ["deadline"] }
        ]
      },
      "closing": {
        "polite_endings": [
          { "id": "f-close-1", "text": "Thank you for your time and assistance.", "tags": ["thanks"] },
          { "id": "f-close-2", "text": "I look forward to hearing from you.", "tags": ["reply"] },
          { "id": "f-close-3", "text": "Please do not hesitate to contact me if you require any further information.", "tags": ["offer-help"] }
        ],
        "attachments": [
          { "id": "f-close-att-1", "text": "Please find attached [document].", "tags": ["attachment"], "slots": ["document"] },
          { "id": "f-close-att-2", "text": "I have attached [document] for your review.", "tags": ["attachment"], "slots": ["document"] }
        ],
        "signoffs": [
          { "id": "f-close-sign-1", "text": "Yours sincerely,", "tags": ["signoff", "named-recipient"] },
          { "id": "f-close-sign-2", "text": "Yours faithfully,", "tags": ["signoff", "unknown-recipient"] },
          { "id": "f-close-sign-3", "text": "Kind regards,", "tags": ["signoff"] },
          { "id": "f-close-sign-4", "text": "Best regards,", "tags": ["signoff"] }
        ]
      }
    },

    "informal": {
      "opening": {
        "greetings": [
          { "id": "i-open-greet-1", "text": "Hi [Name],", "tags": ["greeting"], "slots": ["Name"] },
          { "id": "i-open-greet-2", "text": "Hey [Name]!", "tags": ["greeting", "friendly"], "slots": ["Name"] },
          { "id": "i-open-greet-3", "text": "Hello [Name], hope you’re doing well.", "tags": ["greeting", "warm"], "slots": ["Name"] }
        ],
        "openers": [
          { "id": "i-open-1", "text": "Just a quick email to...", "tags": ["purpose-lead", "quick"] },
          { "id": "i-open-2", "text": "I wanted to message you about [topic].", "tags": ["purpose-lead"], "slots": ["topic"] },
          { "id": "i-open-3", "text": "Thanks for your message — I’m so glad you wrote!", "tags": ["reply", "friendly"] }
        ]
      },
      "purpose": {
        "requests": [
          { "id": "i-purp-req-1", "text": "Can you help me with [topic]?", "tags": ["request"], "slots": ["topic"] },
          { "id": "i-purp-req-2", "text": "Could you send me [thing] when you get a chance?", "tags": ["request"], "slots": ["thing"] },
          { "id": "i-purp-req-3", "text": "Do you know if [detail]?", "tags": ["question"], "slots": ["detail"] }
        ],
        "invites": [
          { "id": "i-purp-inv-1", "text": "Do you want to come to [event] on [day]?", "tags": ["invite"], "slots": ["event", "day"] },
          { "id": "i-purp-inv-2", "text": "I’m planning [plan] — want to join?", "tags": ["invite"], "slots": ["plan"] }
        ],
        "apologies": [
          { "id": "i-purp-apol-1", "text": "I’m really sorry about [issue].", "tags": ["apology"], "slots": ["issue"] },
          { "id": "i-purp-apol-2", "text": "Sorry I didn’t reply sooner — things have been busy.", "tags": ["apology", "delay"] }
        ],
        "thanks": [
          { "id": "i-purp-thx-1", "text": "Thanks so much for [help/thing]!", "tags": ["thanks"], "slots": ["help/thing"] },
          { "id": "i-purp-thx-2", "text": "I really appreciate you doing that.", "tags": ["thanks"] }
        ]
      },
      "details": {
        "sharing_information": [
          { "id": "i-det-info-1", "text": "Here are the details:", "tags": ["info"] },
          { "id": "i-det-info-2", "text": "The plan is basically: [plan].", "tags": ["info"], "slots": ["plan"] },
          { "id": "i-det-info-3", "text": "Let me know if anything needs changing.", "tags": ["flexible"] }
        ],
        "clarifying": [
          { "id": "i-det-clar-1", "text": "Just checking — do you mean [thing]?", "tags": ["clarify"], "slots": ["thing"] },
          { "id": "i-det-clar-2", "text": "Quick question: [question]?", "tags": ["clarify"], "slots": ["question"] }
        ],
        "scheduling": [
          { "id": "i-det-sch-1", "text": "I’m free [day/time] — does that work for you?", "tags": ["schedule"], "slots": ["day/time"] },
          { "id": "i-det-sch-2", "text": "What time suits you best?", "tags": ["schedule"] },
          { "id": "i-det-sch-3", "text": "If it rains, we can do [backup plan] instead.", "tags": ["backup"], "slots": ["backup plan"] }
        ]
      },
      "closing": {
        "friendly_endings": [
          { "id": "i-close-1", "text": "Talk soon!", "tags": ["closing", "friendly"] },
          { "id": "i-close-2", "text": "Let me know what you think.", "tags": ["closing", "feedback"] },
          { "id": "i-close-3", "text": "Can’t wait — this will be fun!", "tags": ["closing", "excited"] }
        ],
        "signoffs": [
          { "id": "i-close-sign-1", "text": "Best,", "tags": ["signoff"] },
          { "id": "i-close-sign-2", "text": "Cheers,", "tags": ["signoff"] },
          { "id": "i-close-sign-3", "text": "See you,", "tags": ["signoff"] }
        ]
      }
    }
  }
}
